{
  "name": "skick_server",
  "version": "0.9.3",
  "description": "An API layer to manage society play characters.",
  "author": "thZero",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thzero/societySidekick-server.git"
  },
  "bugs": {
    "url": "https://github.com/thzero/societySidekick-server/issues"
  },
  "homepage": "https://github.com/thzero/societySidekick-server#readme",
  "engines": {
    "node": ">=13.0.1"
  },
  "main": "index.js",
  "scripts": {
    "debug": "set NODE_ENV=dev && SET LOG_LEVEL=debug && nodemon -r esm --trace-uncaught --inspect index.js",
    "docker-build": "docker build -t thzero/societysidekick:latest .",
    "docker-run": "docker run -p 7984:8081 --env PORT=9091 thzero/societysidekick:latest",
    "gcloud-build": "gcloud config set project societysidekick && gcloud builds submit --tag gcr.io/societysidekick/api",
    "gcloud-deploy": "gcloud config set run/region us-central1 && gcloud beta run deploy --image gcr.io/societysidekick/api --platform managed",
    "start": "node -r esm --trace-uncaught index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "./node_modules/.bin/eslint .",
    "cli": "node -r esm cli.js"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.4.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/joi-date": "^2.0.1",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^9.3.1",
    "@thzero/library": "npm:@thzero/library_server@^0.6.5",
    "async-mutex": "^0.2.4",
    "config": "^3.3.1",
    "crc": "^3.8.0",
    "dayjs": "^1.8.29",
    "dayjs-plugin-utc": "^0.1.2",
    "decimal.js-light": "^2.5.0",
    "easy-rbac": "^3.1.1",
    "esm": "^3.2.25",
    "firebase": "^7.16.0",
    "firebase-admin": "^8.13.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-helmet": "^5.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.19",
    "minimist": "^1.2.5",
    "mongodb": "^3.5.9",
    "pino": "^6.3.2",
    "pino-pretty": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "short-uuid": "^3.1.1",
    "swagger2-koa": "^2.0.0",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-loader": "^8.1.0",
    "eslint": "^7.4.0",
    "eslint-plugin-node": "^11.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
