  "version_date": "04/16/2022",
  "description": "An API layer to manage society play characters.",
  "author": "thZero",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thzero/societySidekick-server.git"
  },
  "bugs": {
    "url": "https://github.com/thzero/societySidekick-server/issues"
  },
  "homepage": "https://github.com/thzero/societySidekick-server#readme",
  "engines": {
    "node": ">=12.8.3"
  },
  "main": "index.js",
  "scripts": {
    "debug": "set NODE_ENV=dev && SET LOG_LEVEL=debug && nodemon --experimental-specifier-resolution=node --nolazy --inspect-brk=9229 index.js",
    "docker-build": "docker build -t thzero/societysidekick:latest .",
    "docker-run": "docker run -p 7984:8081 --env PORT=9091 thzero/societysidekick:latest",
    "gcloud-build": "gcloud config set project societysidekick && gcloud builds submit --tag gcr.io/societysidekick/api",
    "gcloud-deploy": "gcloud config set run/region us-central1 && gcloud beta run deploy --image gcr.io/societysidekick/api --platform managed",
    "start": "node --experimental-specifier-resolution=node --nolazy --trace-uncaught index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "./node_modules/.bin/eslint .",
    "cli-id": ".\\node_modules\\.bin\\library-cli --generate",
    "cli-update": "./node_modules/.bin/library-cli --updateversion --pi",
    "cli-update-w": ".\\node_modules\\.bin\\library-cli --updateversion --pi"
  },
  "dependencies": {
    "@thzero/library_common": "^0.15.8",
    "@thzero/library_common_service": "^0.15.11",
    "@thzero/library_server": "^0.15.29",
    "@thzero/library_server_firebase": "^0.15.7",
    "@thzero/library_server_logger_pino": "^0.15.10",
    "@thzero/library_server_repository_mongo": "^0.15.11",
    "@thzero/library_server_validation_joi": "^0.15.7",
    "decimal.js-light": "^2.5.1",
    "koa-body": "^4.2.0",
    "pino-pretty": "^7.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@thzero/library_cli": "^0.15.8",
    "babel-loader": "^8.2.4",
    "eslint": "^8.13.0",
    "eslint-plugin-node": "^11.1.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}