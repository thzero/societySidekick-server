{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Nodemon",
			"runtimeExecutable": "nodemon",
			"runtimeArgs":["--experimental-specifier-resolution","node"],
			"program": "${workspaceFolder}/index.js",
			"restart": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": { "LOG_LEVEL" : "debug" }
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Nodemon2",
			"runtimeExecutable": "nodemon",
			"runtimeArgs":["-r","esm"],
			"program": "${workspaceFolder}/index.js",
			"restart": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": { "LOG_LEVEL" : "debug" }
		}
	]
}